{% extends '_base/member-layout.njk' %}
{% from '../_components/alert.njk' import alert %}
{% from '../_components/input-password.njk' import inputPassword %}

{% block content %}
<main class="container mx-auto py-16 flex justify-center w-4/5">
   <div class="w-full md:w-5/12 lg:w-4/12">

      <nav class="flex gap-1 text-sm items-center">
         <a href="/setting" class="text-blue-600">Setting</a>
         <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
         </svg>
         <span class="text-slate-500">Profile</span>
      </nav>

      <h1 class="font-bold text-2xl mb-6">Ubah Profile dan Bio</h1>
      {{ alert('success', flash('success')) }}
      {{ alert('fail', flash('fail')) }}

      <form action="/setting/profile" method="POST" class="flex flex-col gap-4">
         <div>
            <label for="motto" class="block mb-2 text-slate-600">Motto</label>
            <textarea
               class="px-4 py-2 w-full rounded-lg border focus:outline focus:outline-2 focus:outline-blue-500 border-slate-300"
               name="motto" placeholder="Tagline atau motto untuk profile anda">{{- profile.motto -}}
            </textarea>
         </div>

         <div>
            <label for="aboutMe" class="block mb-2 text-slate-600">About Me/Bio</label>
            <textarea rows="8"
               class="px-4 py-2 w-full rounded-lg border focus:outline focus:outline-2 focus:outline-blue-500 border-slate-300"
               name="aboutMe" placeholder="Deskripsi lengkap tentang diri anda">{{- profile.aboutMe -}}
            </textarea>
         </div>

         <div>
            <label for="dateOfBirth" class="block mb-2 text-slate-600">Tanggal Lahir</label>
            <input
               class="px-4 py-2 w-full rounded-lg border focus:outline focus:outline-2 focus:outline-blue-500 border-slate-300"
               type="date" name="dateOfBirth" placeholder="Tanggal lahir"
               value="{{ profile.dateOfBirth | date('YYYY-MM-DD') }}">
         </div>

         <div>
            <label for="gender" class="block mb-2 text-slate-600">Jenis Kelamin</label>
            <label class="mr-2">
               <input type="radio" name="gender" value="MALE" {% if profile.gender=='MALE' %}checked{% endif %}>
               Laki-laki
            </label>
            <label class="mr-2">
               <input type="radio" name="gender" value="FEMALE" {% if profile.gender=='FEMALE' %}checked{% endif %}>
               Perempuan
            </label>
            <label class="mr-2">
               <input type="radio" name="gender" value="UNKNOWN" {% if profile.gender=='UNKNOWN' %}checked{% endif %}>
               Tidak diketahui
            </label>
         </div>


         <button type="submit"
            class="mt-4 inline-flex gap-2 justify-center items-center px-4 py-2 w-full text-white bg-blue-500 rounded-full">Simpan</button>
      </form>
   </div>
</main>
{% endblock %}