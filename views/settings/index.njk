{% extends '_base/member-layout.njk' %}

{% block content %}
<main class="container mx-auto px-4 md:px-0 flex justify-center">
   <div class="flex flex-col gap-6 my-16 w-full md:w-8/12">
      {# Avatar Setting #}
      <section class="flex flex-row items-center p-8 gap-6 bg-white rounded-xl border">
         <img src="/images/avatar/{{ user.avatarFileName }}" alt="avatar" class="w-16 h-16 md:w-32 md:h-32 rounded-full border" />
         <div class="hidden md:block">
            <h1 class="md:mb-2 text-3xl font-bold">{{ user.fullName }}</h1>
            <p>Role: {{ user.role }}</p>
            <p class="text-sm text-slate-500">Bergabung sejak {{ user.createdAt | date('MMM YYYY') }}</p>
         </div>

         <a href="/setting/avatar"
            class="ml-auto py-2 px-4 text-blue-600 font-bold hover:bg-blue-500/10 rounded-full inline-flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
               stroke="currentColor" class="w-5 h-5 inline-block">
               <path stroke-linecap="round" stroke-linejoin="round"
                  d="M6.827 6.175A2.31 2.31 0 015.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 00-1.134-.175 2.31 2.31 0 01-1.64-1.055l-.822-1.316a2.192 2.192 0 00-1.736-1.039 48.774 48.774 0 00-5.232 0 2.192 2.192 0 00-1.736 1.039l-.821 1.316z" />
               <path stroke-linecap="round" stroke-linejoin="round"
                  d="M16.5 12.75a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zM18.75 10.5h.008v.008h-.008V10.5z" />
            </svg>
            Upload Foto</a>
      </section>

      {# Identity #}
      <section class="p-8 gap-6 bg-white rounded-xl border">
         <header class="mb-2 flex flex-row items-center justify-between">
            <h1 class="text-lg md:text-2xl font-bold">Identitas</h1>
            <a href="/setting/identity"
               class="py-2 px-4 text-blue-600 font-bold hover:bg-blue-500/10 rounded-full inline-flex items-center gap-2">
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 inline-block">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                </svg>
               Ubah Identitas</a>
         </header>
         <div class="text-sm">
            <p><span class="text-slate-600">Email:</span> <strong>{{ user.email }}</strong></p>
            <p><span class="text-slate-600">Telepon:</span> <strong>{{ user.phoneNumber if user.phoneNumber else '-' }}</strong></p>
         </div>
      </section>

      
      {# About and motto setting #}
      <section class="p-8 gap-6 bg-white rounded-xl border">
         <header class="mb-2 flex flex-row items-center justify-between">
            <h1 class="text-lg md:text-2xl font-bold">Profile & Bio</h1>
            <a href="/setting/profile"
               class="py-2 px-4 text-blue-600 font-bold hover:bg-blue-500/10 rounded-full inline-flex items-center gap-2">
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 inline-block">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                </svg>
               Edit Profile</a>
         </header>
         <div class="text-sm">
            <p class="line-clamp-1"><span class="text-slate-600">Motto:</span> <strong>{{ user.profile.motto if user.profile.motto else '-' }}</strong></p>
            <p class="line-clamp-1"><span class="text-slate-600">Bio:</span> <strong>{{ user.profile.aboutMe if user.profile.aboutMe else '-' }}</strong></p>
         </div>
      </section>

      {# Education and experience setting #}
      <section class="p-8 gap-6 bg-white rounded-xl border">
         <header class="mb-2 flex flex-row items-center justify-between">
            <h1 class="text-lg md:text-2xl font-bold">Pendidikan & Pekerjaan</h1>
            <a href="/setting/education"
               class="py-2 px-4 text-blue-600 font-bold hover:bg-blue-500/10 rounded-full inline-flex items-center gap-2">
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 inline-block">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                </svg>
               Edit</a>
         </header>
         <div class="text-sm">
            <p><span class="text-slate-600">Pendidikan Terakhir:</span> <strong>{{ user.profile.schoolGrade if user.profile.schoolGrade else '-' }}</strong></p>
            <p><span class="text-slate-600">Pekerjaan:</span> <strong>{{ user.profile.jobTitle if user.profile.jobTitle else '-' }}</strong></p>
         </div>
      </section>


      {# Password setting #}
      <section class="p-8 gap-6 bg-white rounded-xl border">
         <header class="mb-2 flex flex-row items-center justify-between">
            <h1 class="text-lg md:text-2xl font-bold">Password</h1>
            <a href="/setting/password"
               class="py-2 px-4 text-blue-600 font-bold hover:bg-blue-500/10 rounded-full inline-flex items-center gap-2">
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 inline-block">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 5.25a3 3 0 013 3m3 0a6 6 0 01-7.029 5.912c-.563-.097-1.159.026-1.563.43L10.5 17.25H8.25v2.25H6v2.25H2.25v-2.818c0-.597.237-1.17.659-1.591l6.499-6.499c.404-.404.527-1 .43-1.563A6 6 0 1121.75 8.25z" />
                </svg>
               Ubah Password</a>
         </header>
         <div class="text-sm">
            <p><span class="text-slate-600">Terakhir diubah:</span> <strong>{{ user.passwordUpdatedAt | date('toNow') }}</strong></p>
         </div>
      </section>
   </div>
</main>
{% endblock %}