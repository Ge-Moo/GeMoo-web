{% extends '_base/member-layout.njk' %}
{% from '../_components/alert.njk' import alert %}

{% block content %}
<main class="container flex justify-center py-16 mx-auto w-4/5">
  <div class="w-full md:w-5/12 lg:w-4/12">

    <header class="flex justify-between items-center">
      <div>
        <nav class="flex gap-1 items-center text-sm">
          <a href="/setting" class="text-blue-600">Setting</a>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
          </svg>
          <span class="text-slate-500">Foto Profile</span>
        </nav>
        <h1 class="text-2xl font-bold">Ubah Foto</h1>
      </div>
      <a href="{{ '/setting/avatar/delete' if currentUser.avatarFileName !== 'default.png' else '#!' }}" class="px-3 py-1 text-red-500 rounded-full hover:bg-red-500/10">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="inline-block w-4 h-4">
        <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
      </svg>
       Hapus Foto</a>
    </header>


    {{ alert('success', message.success) }}
    {{ alert('fail', message.fail) }}

    <form action="/setting/avatar" enctype="multipart/form-data" method="POST" 
      class="flex flex-col gap-4"
      x-data="{ isFileReady: false }">
     
      {# PREVIEW GAMBAR, SIAP UPLOAD KE SERVER #}
      <picture>
        <img x-ref="avatarPreview" src="/images/avatar/{{ currentUser.avatarFileName }}" alt="Avatar preview"
          class="mx-auto my-8 w-60 h-60 rounded-full border" />
      </picture>


      {# INPUT FILE GAMBAR #}
      <input x-ref="inputFile" type="file" class="hidden" name="avatar" accept="image/*" required
        @change="(e) => {
          $refs.avatarPreview.src = URL.createObjectURL(e.target.files[0]);
          $refs.selectImageLabel.innerText = e.target.files[0].name;
          isFileReady = true;
        }"/>

      <button type="button"
        @click="$refs.inputFile.click()"
        class="inline-flex gap-2 justify-center items-center px-4 py-2 mt-2 w-full text-blue-500 rounded-full border border-blue-500 hover:bg-blue-500/10">

        <svg fill="none" viewBox="0 0 24 24" stroke-width="1.5"
          stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M6.827 6.175A2.31 2.31 0 015.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 002.25 2.25h15A2.25 2.25 0 0021.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 00-1.134-.175 2.31 2.31 0 01-1.64-1.055l-.822-1.316a2.192 2.192 0 00-1.736-1.039 48.774 48.774 0 00-5.232 0 2.192 2.192 0 00-1.736 1.039l-.821 1.316z" />
          <path stroke-linecap="round" stroke-linejoin="round"
            d="M16.5 12.75a4.5 4.5 0 11-9 0 4.5 4.5 0 019 0zM18.75 10.5h.008v.008h-.008V10.5z" />
        </svg>
        
        <span x-ref="selectImageLabel">Pilih Foto</span>
      </button>

      <button type="submit" :disabled="!isFileReady"
        class="inline-flex gap-2 justify-center items-center px-4 py-2 mt-2 w-full text-white bg-blue-500 rounded-full disabled:bg-blue-500/25">
        Simpan
      </button>

    </form>
  </div>
</main>
{% endblock %}