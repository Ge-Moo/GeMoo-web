{% extends '_base/member-layout.njk' %}
{% from '../_components/alert.njk' import alert %}
{% from '../_components/input-password.njk' import inputPassword %}

{% block content %}
<main class="container mx-auto py-16 flex justify-center w-4/5">
   <div class="w-full md:w-5/12 lg:w-4/12">

      <nav class="flex gap-1 text-sm items-center">
         <a href="/setting" class="text-blue-600">Setting</a>
         <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
            stroke="currentColor" class="w-4 h-4">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
         </svg>
         <span class="text-slate-500">Identitas</span>
      </nav>

      <h1 class="font-bold text-2xl mb-6">Ubah Identitas</h1>
      {{ alert('success', flash('success')) }}
      {{ alert('fail', flash('fail')) }}

      <form action="/setting/identity" method="POST" class="flex flex-col gap-4">
         <div>
            <label for="fullName" class="block mb-2 text-slate-600">Nama Lengkap</label>
            <input
               class="px-4 py-2 w-full rounded-lg border focus:outline focus:outline-2 focus:outline-blue-500 border-slate-300"
               type="text" name="fullName" placeholder="Nama Lengkap sesuai KTP" value="{{ user.fullName }}">
            <span class="text-sm text-slate-400">Dipakai untuk pembuatan sertifikat, penghargaan, dll.</span>
         </div>

         <div>
            <label for="nickName" class="block mb-2 text-slate-600">Nama Panggilan</label>
            <input
               class="px-4 py-2 w-full rounded-lg border focus:outline focus:outline-2 focus:outline-blue-500 border-slate-300"
               type="text" name="nickName" placeholder="Nama panggilan" value="{{ user.nickName }}">
            <span class="text-sm text-slate-400">Dipakai untuk menyapamu biar akrab.</span>
         </div>

         <div>
            <label for="displayName" class="block mb-2 text-slate-600">Nama Tampilan</label>
            <input
               class="px-4 py-2 w-full rounded-lg border focus:outline focus:outline-2 focus:outline-blue-500 border-slate-300"
               type="text" name="displayName" placeholder="Nama tampilan" value="{{ user.displayName }}">
            <span class="text-sm text-slate-400">Dipakai untuk nama tampilan di aplikasi Ukelas.</span>
         </div>

         <div>
            <label for="phoneNumber" class="block mb-2 text-slate-600">No. Telepon</label>
            <input
               class="px-4 py-2 w-full rounded-lg border focus:outline focus:outline-2 focus:outline-blue-500 border-slate-300"
               type="text" name="phoneNumber" placeholder="No. Telepon aktif" value="{{ user.phoneNumber }}">
         </div>


         <button type="submit"
            class="mt-4 inline-flex gap-2 justify-center items-center px-4 py-2 w-full text-white bg-blue-500 rounded-full">Simpan</button>
      </form>
   </div>
</main>
{% endblock %}